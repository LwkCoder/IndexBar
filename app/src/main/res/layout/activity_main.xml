<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lwkandroid.indexbardemo.MainActivity">

    <com.lwkandroid.indexbar.IndexBar
        android:id="@+id/indexBar"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        app:text_color_normal="@android:color/darker_gray"
        app:text_color_pressed="@android:color/holo_red_dark"
        app:text_size_normal="14sp"
        app:text_size_pressed="16sp"/>
</FrameLayout>
